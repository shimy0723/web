<!-- This is the main layout for the application -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/x-icon" href="img/favicon.ico">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" media="screen and (max-width: 768px)" href="/css/mobile.css">
    <title>7th Sense Korean Gin | Soju</title>
</head>
<body>    
    <!-- Home Logo -->
    <a class="logo">
        <img class="secret_logo" src="/img/logo.png" alt="Logo Image">
    </a>

    <!-- Social Media Links -->
    <div class="social">
        <span class="label">follow us:</span>
        <a href="https://www.facebook.com/%EC%B0%B8%EC%9D%B4%EC%8A%AC-49743181575" class="fb" target="_blank"><i class="fab fa-facebook"></i></a>
        <a href="https://www.facebook.com/%EC%B0%B8%EC%9D%B4%EC%8A%AC-49743181575" class="fb" target="_blank"><i class="fab fa-twitter"></i></a>
        <a id="secret_btn" href="#" class="fb"><i class="fas fa-user-secret"></i></a>       
    </div>

    <!-- Menu button -->
    <div id="open-menu" class="menu-button">
        <div class="menu-button_burger"></div>
    </div>

    <!-- Navigation -->
    <nav id="nav" class="nav">
        <!-- Home -->
        <a class="link home_link">
            <h3>Home</h3>
            <p class="short-text joke">It's Soju time</p>
        </a>    
        <!-- Product -->
        <a class="link product_link">
            <h3>Product</h3>
            <p class="short-text joke">Original recipe</p>
        </a>    
        <!-- Mixology -->
        <a class="link mixology_link">
            <h3>Mixology</h3>
            <p class="short-text joke">Sonsationally Exciting</p>
        </a>    
        <!-- Crafting -->
        <a class="link crafting_link">
            <h3>Crafting</h3>
            <p class="short-text joke">Technology, Destylery, Balance</p>
        </a>    
        <!-- Sense -->
        <a class="link sense_link">
            <h3>Sense of Korea</h3>
            <p class="short-text joke">See, Hear, Touch, Smell, Taste, Instuition</p>
        </a>   
         <!-- Contact -->
        <a class="link contact_link">
            <h3>Contact</h3>
            <p class="short-text joke">Keep in touch</p>
        </a>    
    </nav>

    <!-- Main Content -->
    <div id="total-wrapper" class="total-wrapper animate">
        <div id="container" class="container">            
            <%- body %>            
        </div>
    </div>

    <!-- Web Design Signature -->
    <div id="signature" class="signature">
        <span>design replicated by </span><span>joe</span>
    </div>

    <!-- Condition of Use -->
    <a id="condition-of-use-link" class="condition-of-use-link" href="https://www.alcohol.org.nz/alcohol-management-laws/licensing-local-policies/alcohol-licensing" target="_blank">Condition of Use</a>
       
    <script src="/js/main.js"></script>    
</body>
</html>